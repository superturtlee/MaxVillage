# MaxVillage Configuration File
# This file will be automatically generated at config/maxvillage-common.toml
# after running Minecraft with the mod for the first time.

# Configure natural structure generation
# Spacing: Average distance between structures (in chunks)
# Separation: Minimum distance between structures (in chunks)

[structures]

    # Village Generation Settings
    # Spacing: Average distance between villages (in chunks)
    # Separation: Minimum distance between villages (in chunks)
    [structures.village]
        # Default: 32
        # Range: 1 ~ 1000
        spacing = 32
        # Default: 8
        # Range: 1 ~ 1000
        separation = 8

